@model IEnumerable<Productos>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Productos";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Catalogos" asp-action="Index">Catalogos</a></li>
        <li class="breadcrumb-item active" aria-current="page">Productos</li>
    </ol>
</nav>
<section id="nuevoProducto" class="mb-2">
    <a id="btnNuevo" class="btn btn-success" asp-controller="Productos" asp-action="Registro">
        <i class=" fa fa-file"></i> Nuevo
    </a>
</section>
<!---Listar las editoriales existentes en la BD-->
<section id="ListaProductos">
    <table class="table table-striped table-borderless">
        <thead class=" thead-light">
            <tr>

                <th scope="col">@Html.DisplayNameFor(model => model.nombre)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.descripcion)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Stock)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Precio)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Imagen)</th>

       
                <th scope="col">@Html.DisplayNameFor(model => model.categoria)</th>
                <th scope="col">Estatus</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productos in Model)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(model => productos.nombre)</th>
                    <td>@Html.DisplayFor(model => productos.descripcion)</td>
                    <td>@Html.DisplayFor(model => productos.Stock)</td>
                    <td>@Html.DisplayFor(model => productos.Precio)</td>
                    <td><img src="~/Img/@productos.Imagen" heigth="10" witdh="10" /></td>

                    <td>@Html.DisplayFor(model => productos.categoria.nombre)</td>
                    <td>@Html.DisplayFor(model => productos.estatus)</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Editar" asp-route-id="@productos.ID">
                            <i class="fas fa-edit"></i>Editar
                        </a>
                        <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@productos.ID">
                            <i class="fas fa-trash"></i>Eliminar
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</section>
