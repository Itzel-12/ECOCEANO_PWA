@model Ventas
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Ventas";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Catalogos" asp-action="Index">Catalogos</a></li>
        <li class="breadcrumb-item"><a asp-controller="Ventas" asp-action="Index">Ventas</a></li>
        <li class="breadcrumb-item active" aria-current="page">Nueva</li>
    </ol>
</nav>

<section id="nuevaVenta">
    <form method="post" asp-controller="Ventas" asp-action="Add">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Articulos" class=" control-label"></label>
            <input asp-for="Articulos" class="form-control" />
            <span asp-validation-for="Articulos" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MontoTotal" class=" control-label"></label>
            <input asp-for="MontoTotal" class="form-control" />
            <span asp-validation-for="MontoTotal" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductoID" class=" control-label"></label>
            <select asp-for="ProductoID" asp-items="ViewBag.ProductoID" class=" form-control"></select>
            <span asp-validation-for="ProductoID" class="text-danger"></span>
        </div>

        <div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </form>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

