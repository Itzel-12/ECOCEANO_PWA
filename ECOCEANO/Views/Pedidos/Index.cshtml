@model IEnumerable<Pedidos>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Pedidos";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Catalogos" asp-action="Index">Catalogos</a></li>
        <li class="breadcrumb-item active" aria-current="page">Pedidos</li>
    </ol>
</nav>
<section id="nuevoPedido" class="mb-2">
    <a id="btnNuevo" class="btn btn-success" asp-controller="Pedidos" asp-action="Registro">
        <i class=" fa fa-file"></i> Nuevo
    </a>
</section>
<!---Listar las editoriales existentes en la BD-->
<section id="ListaProductos">
    <table class="table table-striped table-borderless">
        <thead class=" thead-light">
            <tr>

                <th scope="col">@Html.DisplayNameFor(model => model.descripcion)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.usuario)</th>

                <th scope="col">Estatus</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pedidos in Model)
            {
            <tr>
                <th scope="row">@Html.DisplayFor(model => pedidos.descripcion)</th>
                <th scope="row">@Html.DisplayFor(model => pedidos.usuario.ID)</th>
                <td>@Html.DisplayFor(model => pedidos.estatus)</td>
                <td>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@pedidos.ID">
                        <i class="fas fa-edit"></i>Editar
                    </a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@pedidos.ID">
                        <i class="fas fa-trash"></i>Eliminar
                    </a>
                </td>

            </tr>
            }
        </tbody>
    </table>
</section>
