@model IEnumerable<Categorias>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Categorias";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Catalogos" asp-action="Index">Catalogos</a></li>
        <li class="breadcrumb-item active" aria-current="page">Categorias</li>
    </ol>
</nav>
<section id="nuevaCategoria" class="mb-2">
    <a id="btnNuevo" class="btn btn-success" asp-controller="Categorias" asp-action="Registro">
        <i class=" fa fa-file"></i> Nuevo
    </a>
</section>
@if (ViewData.ModelState.IsValid == false)
{
    <div class=" alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error</strong> @Html.ValidationMessage("ErrorCategoria")
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true" &times;></span>
        </button>
    </div>
}
<!---Listar las editoriales existentes en la BD-->
<section id="ListaCategorias">
    <table class="table table-striped table-borderless">
        <thead class=" thead-light">
            <tr>

                <th scope="col">@Html.DisplayNameFor(model => model.nombre)</th>
                <th scope="col">Estatus</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categorias in Model)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(model => categorias.nombre)</th>
                    <td>@Html.DisplayFor(model => categorias.estatus)</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Editar" asp-route-id="@categorias.ID">
                            <i class="fas fa-edit"></i>Editar
                        </a>
                        <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@categorias.ID">
                            <i class="fas fa-trash"></i>Eliminar
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</section>
